<Window x:Class="RetroLauncher.Client.Views.Dialogs.FlatDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RetroLauncher.Client.Views.Dialogs"
        mc:Ignorable="d" 
        Background="{StaticResource MainGradient}"
        ShowInTaskbar="False"
        WindowStyle="ToolWindow"
        ResizeMode="CanResizeWithGrip" WindowStartupLocation="CenterScreen"  MinWidth="300" MinHeight="300"
        Title="{Binding Title}" BorderBrush="#B2736F78" BorderThickness="1" >
    <Window.Effect>
        <DropShadowEffect Color="#FFF4EFF5" ShadowDepth="7" BlurRadius="7" Direction="309" Opacity="0.5"/>
    </Window.Effect>
    <Window.Style>
        <Style TargetType="{x:Type Window}" >
            <Setter Property="SizeToContent" Value="WidthAndHeight" />
        </Style>
    </Window.Style>
</Window>
