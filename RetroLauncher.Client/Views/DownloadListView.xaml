<UserControl x:Class="RetroLauncher.Client.Views.DownloadListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RetroLauncher.Client.Views"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" >
    <Grid>
        <Expander VerticalAlignment="Bottom" Margin="10,10,10,50" IsExpanded="True" Header="Загрузки" FontSize="16" Foreground="{StaticResource MainTitle}">
            <DataGrid Margin="0,5" ItemsSource="{Binding DownloadsList, UpdateSourceTrigger=PropertyChanged}" AutoGenerateColumns="False" FontSize="10" HeadersVisibility="None">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding ShortFileName}"/>
                    <DataGridTextColumn Binding="{Binding PercentString}"/>
                </DataGrid.Columns>

            </DataGrid>
        </Expander>

    </Grid>
</UserControl>
