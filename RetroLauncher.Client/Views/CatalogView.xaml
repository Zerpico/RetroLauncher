                <Button.ContextMenu>
                    <ContextMenu >
                        <MenuItem IsCheckable="True" Header="По платформам"/>
                        <MenuItem IsCheckable="True" Header="По рейтингу"/>
                        <MenuItem IsCheckable="True" Header="По скачиваниям"/>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
