                </Button.ContextMenu>

            </Button>



            <TextBox x:Name="txtUserEntry"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Stretch"
                     FontSize="18"
                     Style="{StaticResource FilterTextBox}"
                     Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, Delay=500}"
                     Width="250" Margin="5"/>



